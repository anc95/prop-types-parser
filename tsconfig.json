{
  "compilerOptions": {
    "alwaysStrict": true,
    // "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "pretty": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es6"
  },
  "exclude": [
    "index.d.ts",
    "dist",
    "node_modules",
    "tests/*.d.ts"
  ]
}